<?xml version="1.0"?>
<launch>

  <!-- full path to urdf model -->
  <arg name="urdf_path" default="$(find april_robot_description)/urdf/mia_hand_on_ur10e.urdf.xacro" />

  <!--set urdf args for the ur10e arm-->
  <arg name="arm_urdf_args" value="transmission_hw_interface:=hardware_interface/PositionJointInterface"/>

  <!-- upload robot URDF model to parameter server -->
  <param name="robot_description"
         command="$(find xacro)/xacro '$(arg urdf_path)' $(arg arm_urdf_args)" />

</launch>
